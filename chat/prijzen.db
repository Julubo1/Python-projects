import sqlite3

conn = sqlite3.connect("prijzen.db")
c = conn.cursor()

c.execute("""
CREATE TABLE IF NOT EXISTS producten (
    naam TEXT PRIMARY KEY,
    prijs REAL
)
""")

# Voeg voorbeelddata toe
producten = [
    ("cola", 2.5),
    ("chips", 1.8),
    ("pizza", 7.0),
    ("water", 1.2)
]

c.executemany("INSERT OR REPLACE INTO producten VALUES (?, ?)", producten)
conn.commit()
conn.close()
